.container
  .row
    .col-md-6.col-md-offset-3
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            = t('.change_password')
        .panel-body
          = devise_error_messages!
          = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
            = f.hidden_field :reset_password_token
            %fieldset
              .form-group
                = f.password_field :password, autofocus: true, autocomplete: "off", placeholder: t('.password'), class: 'form-control'
              .form-group
                = f.password_field :password_confirmation, autocomplete: "off", placeholder: t('.password_confirmation'), class: 'form-control'
              = f.submit t('.change'), class: 'btn btn-lg btn-success btn-block'
