.container
  .row
    .col-md-6.col-md-offset-3
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            = t('.join')
        .panel-body
          = devise_error_messages!
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            %fieldset
              .form-group
                = f.email_field :email, autofocus: true, placeholder: t('.email'), class: 'form-control'
              .form-group
                = f.password_field :password, autocomplete: "off", placeholder: t('.password'), class: 'form-control'
              .form-group
                = f.password_field :password_confirmation, autocomplete: "off", placeholder: t('.password_confirmation'), class: 'form-control'
              = f.submit t('.sign_up'), class: 'btn btn-lg btn-success btn-block'