= devise_error_messages!
.container
  .row
    .col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            = t('.sign_in')
        .panel-body
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            %fieldset
              .form-group
                = f.email_field :email, autofocus: true, placeholder: t('.email'), class: 'form-control'
              .form-group
                = f.password_field :password, autocomplete: "off", placeholder: t('.password'), class: 'form-control'
              - if devise_mapping.rememberable?
                .checkbox
                  %label
                    = f.check_box :remember_me
                    = t('.remember_me')
              = f.submit t('.login'), class: 'btn btn-lg btn-success btn-block'
              %br
              = link_to t('.forgotpassword'), new_password_path(resource_name)